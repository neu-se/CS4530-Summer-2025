---
import Navigation from "../components/Navigation.astro";
import "../assets/reset.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <base href={`${import.meta.env.BASE_URL}/`} />
    <link
      rel="icon"
      sizes="144x144"
      type="image/png"
      href="https://brand.northeastern.edu/global/assets/favicon/android-chrome-144x144.png?v=2"
    />
    <link
      rel="icon"
      sizes="32x32"
      type="image/png"
      href="https://brand.northeastern.edu/global/assets/favicon/favicon-32x32.png?v=2"
    />
    <link
      rel="icon"
      sizes="16x16"
      type="image/png"
      href="https://brand.northeastern.edu/global/assets/favicon/favicon-16x16.png?v=2"
    />
    <meta name="generator" content={Astro.generator} />
    <title>CS4530, Summer 2025</title>
  </head>
  <body>
    <div id="leftpad"></div>
    <header id="label">CS4530, Summer 2025</header>
    <header id="search">Search CS4530, Summer 2025</header>
    <div id="rightpad"></div>
    <Navigation />
    <main>
      {`<div style="width:50rem; height: 5px; background: blue;"></div>`}
      {`<div style="width:31.25rem; height: 5px; background: blue;"></div>`}
      <slot />
    </main>
  </body>

  <style>
    body {
      display: grid;
      grid-template-columns: 1fr 15.5rem 50rem 1fr;
      grid-template-rows: 3.75rem 1fr;
      grid-template-areas: "leftpad label search rightpad" "leftpad nav main rightpad";
      font-family:
        system-ui,
        -apple-system,
        blinkmacsystemfont,
        "Segoe UI",
        roboto,
        "Helvetica Neue",
        arial,
        sans-serif;
      min-height: 100vh;

      --background: #fff;
      --left-background: #f5f6fa;
      --divider: 1px solid #eeebee;
      --hover-left-background-image: linear-gradient(
        -90deg,
        #ebedf5 0%,
        rgba(235, 237, 245, 0.8) 80%,
        rgba(235, 237, 245, 0) 100%
      );
    }

    #leftpad {
      grid-area: leftpad;
      background-color: var(--left-background);
      border-bottom: var(--divider);
    }
    #rightpad {
      grid-area: rightpad;
      background-color: var(--background);
    }
    #label {
      grid-area: label;
      font-size: 1.5rem;
      padding-inline: 2rem;
      line-height: 1.25;
      color: #27262b;
      background: var(--left-background);
      border-bottom: var(--divider);
      border-right: var(--divider);
      display: grid;
      align-content: center;
    }
    #label:hover {
      background-image: var(--hover-left-background-image);
    }
    #search {
      grid-area: search;
      border-bottom: var(--divider);
    }
    :global(nav) {
      grid-area: nav;
      background: var(--left-background);
      border-right: var(--divider);
    }
    main {
      grid-area: main;
    }

    @media (width <= 65.5rem) {
      body {
        background-color: pink;
        grid-template-columns: 0 15.5rem 1fr 0;
      }
    }
  </style>
</html>
